# do_list()
#	>	variant (+)= --wine | --staging | --vanilla | --all
# Description:
#	Return sorted list of files installed for a particular wine variant.
do_list()
{
	local active column il iv installed_list installed_list_total stripped_colour_codes setting target value
	local -a variants_array=( ) options_array=( "--all" )

	validate_exported_function_parameters 1 "options_array" . "variants_array" . "${@}"

	wait_for_global_lock 0 "true"
	for (( iv=0 ; iv<${#variants_array[@]} ; ++iv )); do
		((iv>0)) && printf "\\n"
		write_list_start "Available $(get_wine_variant_decription "${variants_array[iv]}") versions:"
		# shellcheck disable=SC2207
		installed_list=( $(get_installed_targets 1 "${variants_array[iv]}") )
		active=$(get_active 1 "${variants_array[iv]}")

		installed_list_total=${#installed_list[@]}
		for (( il = 0 ; il < installed_list_total ; il++ )); do
			target="${installed_list[il]}"
			installed_list[il]="$( echo "${target}" | sed -E 's/(.*)-/\1:/' )"
			if [[ "${target}" = "${active}" ]]; then
				installed_list[il]=$(highlight_marker "${installed_list[il]}")
			fi
			if [[ ! -f "${G_CONFIG_DIRECTORY}/${target}" ]] || is_output_mode brief; then
				continue
			fi

			stripped_colour_codes="${installed_list[il]}"
			stripped_colour_codes="${stripped_colour_codes//%%%[A-Z][A-Z]%%%/}"
			installed_list[il]="${installed_list[il]}$( space $((30-${#stripped_colour_codes})) )"
			column=0
			# shellcheck disable=SC2068
			for setting in ${G_WINE_SETTINGS_ARRAY[@]}; do
				column=$((++column % ${#ARRAY_COLUMN_COLOURS[@]}))
				setting="${setting#--}"
				value="$(load_config "${G_CONFIG_DIRECTORY}/${target}" "${setting}")"
				[[ -z "${value}" ]] && continue

				installed_list[il]="${installed_list[il]} ${ARRAY_COLUMN_COLOURS[column]}${value}${COLOUR_NORMAL}$( space $((35-${#value})) )"
			done
		done
		(( installed_list_total == 0 )) && unset -v installed_list

		write_numbered_list -m "(none found)" "${installed_list[@]}"
	done
}

